{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "include": [
    "./**/*.tsx",
    "./**/*.ts"
  ]
}
